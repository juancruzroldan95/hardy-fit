---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import WhatsApp from "../icons/WhatsApp.astro";
import Mail from "../icons/Mail.astro";
import Phone from "../icons/Phone.astro";

const whatsappUrl =
  "https://api.whatsapp.com/send?phone=5491135736956&text=Hola%2C%20quiero%20realizar%20una%20consulta";
const emailUrl = "mailto:ventas@hardy.ar";
const phone = "11 3573 6956";
const email = "ventas@hardy.ar";
---

<Layout
  title="Contacto - HARDY"
  description="Contactate con HARDY. Estamos para ayudarte con cualquier consulta sobre nuestros productos."
>
  <main class="pt-16">
    <!-- Hero Section -->
    <SectionContainer
      id="hero"
      class="relative py-16 overflow-hidden"
      noContainer={true}
    >
      <div class="absolute inset-0 bg-cream"></div>
      <div
        class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(195,33,54,0.08),transparent_55%)]"
      >
      </div>
      <div
        class="relative max-w-7xl mx-auto px-6 lg:px-8 text-center scrolling-section opacity-0"
      >
        <h1
          class="text-4xl md:text-6xl font-header font-extrabold text-primary uppercase mb-6"
        >
          Contactanos
        </h1>
        <p class="text-xl text-neutral-700 max-w-3xl leading-relaxed mx-auto">
          ¿Tenés alguna consulta? Estamos para ayudarte. Escribinos o llamanos y
          te respondemos a la brevedad.
        </p>
      </div>
    </SectionContainer>

    <!-- Contact Cards -->
    <SectionContainer id="contact-info" class="py-16 bg-white">
      <div class="max-w-5xl mx-auto scrolling-section opacity-0">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- WhatsApp -->
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="card bg-white rounded-2xl shadow-lg ring-1 ring-neutral-200 p-8 text-center space-y-4 transition-all duration-300 hover:shadow-2xl hover:ring-[#25D366] hover:-translate-y-1"
          >
            <div class="flex justify-center">
              <div
                class="w-16 h-16 bg-[#25D366] rounded-full flex items-center justify-center"
              >
                <WhatsApp class="w-8 h-8 text-white" />
              </div>
            </div>
            <h3 class="text-xl font-bold text-primary uppercase">WhatsApp</h3>
            <p class="text-neutral-700">{phone}</p>
            <p class="text-sm text-neutral-600">
              Respuesta inmediata en horario laboral
            </p>
          </a>

          <!-- Email -->
          <a
            href={emailUrl}
            class="card bg-white rounded-2xl shadow-lg ring-1 ring-neutral-200 p-8 text-center space-y-4 transition-all duration-300 hover:shadow-2xl hover:ring-primary hover:-translate-y-1"
          >
            <div class="flex justify-center">
              <div
                class="w-16 h-16 bg-primary rounded-full flex items-center justify-center"
              >
                <Mail class="w-8 h-8 text-white" />
              </div>
            </div>
            <h3 class="text-xl font-bold text-primary uppercase">Email</h3>
            <p class="text-neutral-700 break-all">{email}</p>
            <p class="text-sm text-neutral-600">
              Respondemos en 24-48 horas hábiles
            </p>
          </a>

          <!-- Phone -->
          <a
            href={`tel:+549${phone.replace(/\s/g, "")}`}
            class="card bg-white rounded-2xl shadow-lg ring-1 ring-neutral-200 p-8 text-center space-y-4 transition-all duration-300 hover:shadow-2xl hover:ring-secondary hover:-translate-y-1"
          >
            <div class="flex justify-center">
              <div
                class="w-16 h-16 bg-secondary rounded-full flex items-center justify-center"
              >
                <Phone class="w-8 h-8 text-black" />
              </div>
            </div>
            <h3 class="text-xl font-bold text-primary uppercase">Teléfono</h3>
            <p class="text-neutral-700">{phone}</p>
            <p class="text-sm text-neutral-600">Lunes a viernes 9 a 18 hs</p>
          </a>
        </div>
      </div>
    </SectionContainer>

    <!-- Additional Info -->
    <SectionContainer id="info" class="py-16 bg-neutral-50">
      <div class="max-w-4xl mx-auto text-center scrolling-section opacity-0">
        <h2
          class="text-3xl md:text-4xl font-header font-extrabold text-primary uppercase mb-6"
        >
          Otras Consultas
        </h2>
        <div class="space-y-6 text-left">
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <h3 class="text-xl font-bold text-primary mb-3">
              Consultas Mayoristas
            </h3>
            <p class="text-neutral-700 mb-4">
              Si sos distribuidor, tenés un gimnasio, dietética o comercio y
              querés vender nuestros productos, consultá por nuestros packs
              mayoristas.
            </p>
            <a
              href="/mayorista"
              class="inline-block bg-primary hover:bg-primary/90 w-full md:w-auto text-center text-white px-6 py-3 rounded-full font-bold uppercase transition-all duration-300 hover:scale-105"
            >
              Ver Packs Mayoristas
            </a>
          </div>

          <div class="bg-white rounded-lg p-6 shadow-sm">
            <h3 class="text-xl font-bold text-primary mb-3">Compras Online</h3>
            <p class="text-neutral-700 mb-4">
              Para realizar tu compra online, visitá nuestra tienda oficial.
            </p>
            <div class="flex justify-center md:justify-start">
              <a
                href="https://www.hardymarket.com.ar/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block bg-accent hover:bg-accent/90 w-full md:w-auto text-center text-white px-6 py-3 rounded-full font-bold uppercase transition-all duration-300 hover:scale-105"
              >
                Ir a la Tienda
              </a>
            </div>
          </div>
        </div>
      </div>
    </SectionContainer>
  </main>
</Layout>

<script>
  import { animate, stagger, inView } from "motion";

  const isMobile = window.innerWidth < 768;
  const threshold = isMobile ? 0.1 : 0.2;

  inView(
    ".scrolling-section",
    (element) => {
      animate(
        element,
        { opacity: [0, 1], y: [50, 0] },
        { ease: [0.39, 0.24, 0.3, 1], duration: 1 },
      );

      const cards = element.querySelectorAll(".card");
      if (cards.length > 0) {
        animate(
          cards,
          { opacity: [0, 1], y: [25, 0] },
          { type: "spring", delay: stagger(0.25, { startDelay: 0.25 }) },
        );
      }
    },
    { amount: threshold },
  );
</script>
