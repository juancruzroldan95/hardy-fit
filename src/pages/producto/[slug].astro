---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import { PRODUCTS } from "../../consts/products";
import type { Product } from "../../consts/products";
import CircleCheckFilled from "../../icons/CircleCheckFilled.astro";
import ChevronLeft from "../../icons/ChevronLeft.astro";
import ChevronRight from "../../icons/ChevronRight.astro";

export async function getStaticPaths() {
  return PRODUCTS.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

interface Props {
  product: Product;
}

const { product } = Astro.props;

// Get other products for recommendations (exclude current product)
const otherProducts = PRODUCTS.filter(
  (p) => p.id !== product.id && p.isActive,
).slice(0, 3);
---

<Layout title={`${product.name} - HARDY`} description={product.description}>
  <main class="pt-16">
    <!-- Product Hero -->
    <section class="py-16 bg-neutral-50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Product Image -->
          <div class="scrolling-section opacity-0">
            <div
              class="aspect-square bg-white rounded-2xl shadow-xl overflow-hidden ring-1 ring-neutral-200"
            >
              <Image
                src={product.image}
                alt={product.name}
                width={600}
                height={600}
                class="w-full h-full object-cover"
                loading="eager"
                quality={90}
              />
            </div>
          </div>

          <!-- Product Info -->
          <div class="scrolling-section opacity-0 space-y-6">
            <div class="space-y-4">
              <h1
                class="text-4xl md:text-5xl font-header font-extrabold text-primary uppercase leading-tight"
              >
                {product.name}
                {
                  product.weight && (
                    <span class="text-2xl md:text-3xl font-normal text-neutral-600">
                      {" "}
                      — {product.weight}
                    </span>
                  )
                }
              </h1>

              {
                product.shortDescription && (
                  <p class="text-2xl text-primary font-bold italic">
                    {product.shortDescription}
                  </p>
                )
              }

              <p class="text-xl text-neutral-700 leading-relaxed">
                {product.description}
              </p>

              {
                product.fullDescription && (
                  <p class="text-lg text-neutral-600 leading-relaxed">
                    {product.fullDescription}
                  </p>
                )
              }
            </div>

            <!-- Features -->
            {
              product.features && product.features.length > 0 && (
                <div>
                  <h3 class="text-xl font-header font-bold text-primary uppercase mb-4">
                    Características:
                  </h3>
                  <ul class="space-y-2">
                    {product.features.map((feature) => (
                      <li class="flex items-start gap-3">
                        <CircleCheckFilled class="w-5 h-5 text-secondary flex-shrink-0 mt-0.5" />
                        <span class="text-neutral-900 font-medium">
                          {feature}
                        </span>
                      </li>
                    ))}
                  </ul>
                </div>
              )
            }

            <!-- Benefits -->
            <div>
              <h3
                class="text-2xl font-header font-bold text-primary uppercase mb-4"
              >
                Beneficios
              </h3>
              <div class="flex flex-wrap gap-3">
                {
                  product.benefits.map((benefit) => (
                    <span class="bg-secondary text-primary px-4 py-2 rounded-full font-semibold text-sm uppercase">
                      {benefit}
                    </span>
                  ))
                }
              </div>
            </div>

            <!-- CTA Button -->
            <div>
              <a
                href={product.purchaseLink || "https://www.hardymarket.com.ar/"}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-primary text-white w-full md:w-auto text-center md:text-left px-8 py-4 rounded-full uppercase font-semibold text-lg transition-all duration-300 hover:scale-105 hover:shadow-lg active:scale-95 inline-block"
              >
                Comprar Ahora
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Nutrition & Ingredients -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Nutrition Facts -->
          <div class="scrolling-section opacity-0">
            <h2
              class="text-3xl font-header font-extrabold text-primary uppercase mb-6"
            >
              Información Nutricional
            </h2>
            <div class="bg-neutral-50 rounded-2xl p-8 space-y-4">
              <p class="text-sm text-neutral-600 mb-4 font-semibold">
                Porción: {product.nutrition.servingSize}
              </p>
              <div class="space-y-3">
                <div
                  class="flex justify-between items-center border-b border-neutral-200 pb-2"
                >
                  <span class="font-semibold text-neutral-900">
                    Valor Energético
                  </span>
                  <span class="text-primary font-bold">
                    {product.nutrition.calories} kcal = {
                      product.nutrition.caloriesKj
                    } kJ
                  </span>
                </div>
                <div
                  class="flex justify-between items-center border-b border-neutral-200 pb-2"
                >
                  <span class="font-semibold text-neutral-900">
                    Carbohidratos
                  </span>
                  <span class="text-primary font-bold">
                    {product.nutrition.carbs}g
                  </span>
                </div>
                <div
                  class="flex justify-between items-center border-b border-neutral-200 pb-2"
                >
                  <span class="font-semibold text-neutral-900">Proteínas</span>
                  <span class="text-primary font-bold">
                    {product.nutrition.protein}g
                  </span>
                </div>
                <div
                  class="flex justify-between items-center border-b border-neutral-200 pb-2"
                >
                  <span class="font-semibold text-neutral-900">
                    Grasas totales
                  </span>
                  <span class="text-primary font-bold">
                    {product.nutrition.fat}g
                  </span>
                </div>
                <div
                  class="flex justify-between items-center border-b border-neutral-200 pb-2 pl-4"
                >
                  <span class="text-neutral-700">- Grasas Saturadas</span>
                  <span class="text-neutral-900 font-medium">
                    {product.nutrition.saturatedFat}g
                  </span>
                </div>
                <div
                  class="flex justify-between items-center border-b border-neutral-200 pb-2 pl-4"
                >
                  <span class="text-neutral-700">- Grasas Trans</span>
                  <span class="text-neutral-900 font-medium">
                    {product.nutrition.transFat}g
                  </span>
                </div>
                <div
                  class="flex justify-between items-center border-b border-neutral-200 pb-2"
                >
                  <span class="font-semibold text-neutral-900">
                    Fibra Alimenticia
                  </span>
                  <span class="text-primary font-bold">
                    {product.nutrition.fiber}g
                  </span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-semibold text-neutral-900">Sodio</span>
                  <span class="text-primary font-bold">
                    {product.nutrition.sodium}mg
                  </span>
                </div>
              </div>
              <p
                class="text-xs text-neutral-500 mt-4 pt-4 border-t border-neutral-200"
              >
                (*) % Valores Diarios con base a dieta de 2.000Kcal u 8.400kJ.
                Sus valores diarios pueden ser mayores o menores dependiendo de
                sus necesidades energéticas.
              </p>
            </div>
          </div>

          <!-- Ingredients -->
          <div class="scrolling-section opacity-0 space-y-8">
            <div>
              <h2
                class="text-3xl font-header font-extrabold text-primary uppercase mb-6"
              >
                Ingredientes
              </h2>
              <div class="bg-neutral-50 rounded-2xl p-8">
                <p class="text-neutral-900 font-medium leading-relaxed">
                  {product.ingredients.join(", ")}.
                </p>
              </div>
            </div>

            <!-- Allergens -->
            {
              product.allergens && (
                <div>
                  <h3 class="text-xl font-header font-bold text-primary uppercase mb-4">
                    Alérgenos
                  </h3>
                  <div class="bg-secondary/10 border-l-4 border-secondary rounded-lg p-6">
                    <p class="text-neutral-900 font-medium">
                      {product.allergens}
                    </p>
                  </div>
                </div>
              )
            }

            <!-- Notes -->
            {
              product.notes && product.notes.length > 0 && (
                <div>
                  <h3 class="text-xl font-header font-bold text-primary uppercase mb-4">
                    Notas Adicionales
                  </h3>
                  <div class="bg-neutral-50 rounded-2xl p-6 space-y-2">
                    {product.notes.map((note) => (
                      <p class="text-neutral-700 text-sm leading-relaxed">
                        • {note}
                      </p>
                    ))}
                  </div>
                </div>
              )
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Related Products -->
    {
      otherProducts.length > 0 && (
        <section class="py-16 bg-neutral-50">
          <div class="max-w-7xl mx-auto px-6 lg:px-8">
            <h2 class="text-4xl font-header font-extrabold text-primary uppercase mb-12 text-center">
              También te puede gustar
            </h2>

            <!-- Mobile carousel -->
            <div class="relative md:hidden">
              <div class="related-carousel-container overflow-hidden">
                <div class="related-carousel-track flex">
                  {otherProducts.map((relatedProduct) => (
                    <div class="related-carousel-item min-w-full px-2">
                      <a
                        href={`/producto/${relatedProduct.slug}`}
                        class="bg-white rounded-2xl overflow-hidden ring-1 ring-neutral-200 hover:ring-primary transition-all duration-300 hover:scale-105 group block"
                      >
                        <div class="aspect-video bg-white flex items-center justify-center">
                          <Image
                            src={relatedProduct.image}
                            alt={relatedProduct.name}
                            width={400}
                            height={400}
                            class="w-full h-full object-contain p-6"
                            loading="lazy"
                          />
                        </div>
                        <div class="p-6">
                          <h3 class="text-xl font-header font-bold text-primary uppercase mb-2 group-hover:text-accent transition-colors">
                            {relatedProduct.name}
                          </h3>
                          <p class="text-neutral-700 text-sm">
                            {relatedProduct.description}
                          </p>
                        </div>
                      </a>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Navigation dots -->
              <div class="flex justify-center gap-2 mt-6">
                {otherProducts.map((_, index) => (
                  <button
                    class="related-carousel-dot w-3 h-3 rounded-full bg-neutral-300 transition-all duration-300"
                    data-index={index}
                    aria-label={`Go to slide ${index + 1}`}
                  />
                ))}
              </div>

              <!-- Navigation arrows -->
              <button
                class="related-carousel-prev absolute left-0 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white p-3 rounded-full shadow-lg transition-all duration-300 hover:scale-110 z-10"
                aria-label="Previous related product"
              >
                <ChevronLeft class="w-6 h-6 text-primary" />
              </button>
              <button
                class="related-carousel-next absolute right-0 top-1/2 -translate-y-1/2 bg-white/90 hover:bg-white p-3 rounded-full shadow-lg transition-all duration-300 hover:scale-110 z-10"
                aria-label="Next related product"
              >
                <ChevronRight class="w-6 h-6 text-primary" />
              </button>
            </div>

            <!-- Desktop grid -->
            <div class="hidden md:grid grid-cols-1 md:grid-cols-3 gap-8">
              {otherProducts.map((relatedProduct) => (
                <a
                  href={`/producto/${relatedProduct.slug}`}
                  class="bg-white rounded-2xl overflow-hidden ring-1 ring-neutral-200 hover:ring-primary transition-all duration-300 hover:scale-105 group"
                >
                  <div class="aspect-video bg-white flex items-center justify-center">
                    <Image
                      src={relatedProduct.image}
                      alt={relatedProduct.name}
                      width={400}
                      height={400}
                      class="w-full h-full object-contain p-6"
                      loading="lazy"
                    />
                  </div>
                  <div class="p-6">
                    <h3 class="text-xl font-header font-bold text-primary uppercase mb-2 group-hover:text-accent transition-colors">
                      {relatedProduct.name}
                    </h3>
                    <p class="text-neutral-700 text-sm">
                      {relatedProduct.description}
                    </p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </section>
      )
    }
  </main>
</Layout>

<script>
  import { animate, stagger, inView } from "motion";

  // Detect mobile and use different thresholds
  const isMobile = window.innerWidth < 768;
  const threshold = isMobile ? 0.05 : 0.15;

  inView(
    ".scrolling-section",
    (element) => {
      animate(
        element,
        { opacity: [0, 1], y: [50, 0] },
        { ease: [0.39, 0.24, 0.3, 1], duration: 1 },
      );
    },
    { amount: threshold },
  );

  class RelatedProductCarousel {
    private container: HTMLElement;
    private track: HTMLElement;
    private dots: NodeListOf<HTMLElement>;
    private prevBtn: HTMLElement;
    private nextBtn: HTMLElement;
    private currentIndex: number = 0;
    private totalItems: number;

    // Touch/drag state
    private isDragging: boolean = false;
    private startX: number = 0;
    private currentX: number = 0;
    private offsetX: number = 0;
    private startTime: number = 0;
    private velocity: number = 0;
    private autoAdvanceInterval: number | null = null;

    constructor(container: HTMLElement) {
      this.container = container;
      this.track = container.querySelector(".related-carousel-track")!;
      this.dots = container.querySelectorAll(".related-carousel-dot");
      this.prevBtn = container.querySelector(".related-carousel-prev")!;
      this.nextBtn = container.querySelector(".related-carousel-next")!;
      this.totalItems = this.dots.length;

      if (this.totalItems <= 1) return;

      this.init();
    }

    init() {
      // Set initial state
      this.updateCarousel();

      // Button listeners
      this.prevBtn.addEventListener("click", () => this.prev());
      this.nextBtn.addEventListener("click", () => this.next());

      // Dot listeners
      this.dots.forEach((dot, index) => {
        dot.addEventListener("click", () => this.goTo(index));
      });

      // Touch listeners
      this.track.addEventListener(
        "touchstart",
        (e) => this.handleStart(e.touches[0].clientX),
        { passive: false },
      );
      this.track.addEventListener(
        "touchmove",
        (e) => {
          e.preventDefault();
          this.handleMove(e.touches[0].clientX);
        },
        { passive: false },
      );
      this.track.addEventListener("touchend", () => this.handleEnd());

      // Mouse listeners for desktop testing
      this.track.addEventListener("mousedown", (e) => {
        e.preventDefault();
        this.handleStart(e.clientX);
      });
      this.track.addEventListener("mousemove", (e) => {
        if (this.isDragging) {
          e.preventDefault();
          this.handleMove(e.clientX);
        }
      });
      this.track.addEventListener("mouseup", () => this.handleEnd());
      this.track.addEventListener("mouseleave", () => {
        if (this.isDragging) {
          this.handleEnd();
        }
      });

      // Prevent image drag
      this.track.addEventListener("dragstart", (e) => e.preventDefault());

      // Auto-advance every 5 seconds
      this.startAutoAdvance();
    }

    startAutoAdvance() {
      if (this.autoAdvanceInterval) {
        clearInterval(this.autoAdvanceInterval);
      }
      this.autoAdvanceInterval = window.setInterval(() => {
        if (!this.isDragging) {
          this.next();
        }
      }, 5000);
    }

    handleStart(clientX: number) {
      this.isDragging = true;
      this.startX = clientX;
      this.currentX = clientX;
      this.startTime = Date.now();
      this.offsetX = -this.currentIndex * 100;

      // Disable transitions during drag
      this.track.style.transition = "none";

      // Stop auto-advance while dragging
      if (this.autoAdvanceInterval) {
        clearInterval(this.autoAdvanceInterval);
      }
    }

    handleMove(clientX: number) {
      if (!this.isDragging) return;

      this.currentX = clientX;
      const diff = this.currentX - this.startX;
      const trackWidth = this.track.offsetWidth;
      const dragPercentage = (diff / trackWidth) * 100;

      // Calculate velocity for momentum
      const timeDiff = Date.now() - this.startTime;
      if (timeDiff > 0) {
        this.velocity = (diff / timeDiff) * 16; // pixels per frame (assuming 60fps)
      }

      // Apply drag offset with boundaries
      const minOffset = -((this.totalItems - 1) * 100);
      const maxOffset = 0;
      const newOffset = this.offsetX + dragPercentage;

      // Apply resistance at boundaries
      let finalOffset = newOffset;
      if (newOffset > maxOffset) {
        finalOffset = maxOffset + (newOffset - maxOffset) * 0.3;
      } else if (newOffset < minOffset) {
        finalOffset = minOffset + (newOffset - minOffset) * 0.3;
      }

      this.track.style.transform = `translateX(${finalOffset}%)`;
    }

    handleEnd() {
      if (!this.isDragging) return;

      this.isDragging = false;

      // Re-enable transitions
      this.track.style.transition = "transform 0.5s ease-out";

      const diff = this.currentX - this.startX;
      const trackWidth = this.track.offsetWidth;
      const dragPercentage = (diff / trackWidth) * 100;
      const swipeThreshold = 30; // Minimum swipe distance
      const velocityThreshold = 0.5; // Minimum velocity for momentum

      // Determine target index based on swipe distance and velocity
      let targetIndex = this.currentIndex;

      if (
        Math.abs(this.velocity) > velocityThreshold ||
        Math.abs(dragPercentage) > swipeThreshold
      ) {
        if (
          dragPercentage > swipeThreshold ||
          this.velocity > velocityThreshold
        ) {
          // Swipe right - go to previous
          targetIndex = Math.max(0, this.currentIndex - 1);
        } else if (
          dragPercentage < -swipeThreshold ||
          this.velocity < -velocityThreshold
        ) {
          // Swipe left - go to next
          targetIndex = Math.min(this.totalItems - 1, this.currentIndex + 1);
        } else {
          // Not enough swipe, snap back to current
          targetIndex = this.currentIndex;
        }
      } else {
        // Snap to nearest slide
        const currentOffset = this.offsetX + dragPercentage;
        const slidePosition = -currentOffset / 100;
        targetIndex = Math.round(slidePosition);
        targetIndex = Math.max(0, Math.min(this.totalItems - 1, targetIndex));
      }

      this.currentIndex = targetIndex;
      this.updateCarousel();
      this.startAutoAdvance();
    }

    prev() {
      this.currentIndex =
        (this.currentIndex - 1 + this.totalItems) % this.totalItems;
      this.updateCarousel();
      this.startAutoAdvance();
    }

    next() {
      this.currentIndex = (this.currentIndex + 1) % this.totalItems;
      this.updateCarousel();
      this.startAutoAdvance();
    }

    goTo(index: number) {
      this.currentIndex = index;
      this.updateCarousel();
      this.startAutoAdvance();
    }

    updateCarousel() {
      // Move track
      const offset = -this.currentIndex * 100;
      this.track.style.transform = `translateX(${offset}%)`;
      this.track.style.transition = "transform 0.5s ease-out";

      // Update dots
      this.dots.forEach((dot, index) => {
        if (index === this.currentIndex) {
          dot.classList.add("bg-primary", "scale-125");
          dot.classList.remove("bg-neutral-300");
        } else {
          dot.classList.remove("bg-primary", "scale-125");
          dot.classList.add("bg-neutral-300");
        }
      });
    }
  }

  // Initialize related product carousels on mobile
  document.addEventListener("DOMContentLoaded", () => {
    const carousels = document.querySelectorAll(".related-carousel-container");
    carousels.forEach((container) => {
      new RelatedProductCarousel(container.parentElement as HTMLElement);
    });
  });
</script>
