---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="PowerButter - Ultra-Premium Peanut Butter for Athletes">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Background -->
      <div class="absolute inset-0 bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-950"></div>
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(251,146,60,0.1),transparent_50%)]"></div>
      
      <!-- Content -->
      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <div class="space-y-8">
          <div class="space-y-4">
            <h1 class="text-5xl md:text-7xl font-display font-bold text-white leading-tight">
              Fuel Your
              <span class="bg-gradient-to-r from-accent-400 to-accent-600 bg-clip-text text-transparent">
                Performance
              </span>
            </h1>
            <p class="text-xl md:text-2xl text-neutral-300 max-w-3xl mx-auto leading-relaxed">
              Ultra-premium peanut butter crafted for athletes who demand excellence. 
              Pure ingredients, uncompromising quality, maximum performance.
            </p>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <a 
              href="/products" 
              class="bg-gradient-to-r from-accent-500 to-accent-600 hover:from-accent-600 hover:to-accent-700 text-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 shadow-2xl hover:shadow-accent-500/25 transform hover:scale-105"
            >
              Shop Premium Collection
            </a>
            <a 
              href="/about" 
              class="border-2 border-neutral-600 hover:border-accent-500 text-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 hover:bg-accent-500/10"
            >
              Our Story
            </a>
          </div>
          
          <!-- Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-16 max-w-4xl mx-auto">
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-accent-400">30g</div>
              <div class="text-neutral-400 text-sm mt-1">Protein per serving</div>
            </div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-accent-400">0</div>
              <div class="text-neutral-400 text-sm mt-1">Added sugars</div>
            </div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-accent-400">100%</div>
              <div class="text-neutral-400 text-sm mt-1">Natural ingredients</div>
            </div>
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-accent-400">1M+</div>
              <div class="text-neutral-400 text-sm mt-1">Athletes trust us</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- Featured Products -->
    <section class="py-24 bg-neutral-900">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
            Premium Collection
          </h2>
          <p class="text-xl text-neutral-400 max-w-3xl mx-auto">
            Each jar is meticulously crafted with the finest ingredients to fuel your fitness journey
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Product 1 -->
          <div class="group bg-neutral-800 rounded-2xl p-8 hover:bg-neutral-750 transition-all duration-300 transform hover:scale-105">
            <div class="aspect-square bg-gradient-to-br from-neutral-700 to-neutral-800 rounded-xl mb-6 flex items-center justify-center">
              <div class="w-32 h-32 bg-accent-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold text-2xl">PB</span>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">Classic Power</h3>
            <p class="text-neutral-400 mb-4">Pure roasted peanuts with a touch of sea salt. Perfect for pre-workout fuel.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-accent-400">$24.99</span>
              <button class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-2 rounded-full transition-colors">
                Add to Cart
              </button>
            </div>
          </div>
          
          <!-- Product 2 -->
          <div class="group bg-neutral-800 rounded-2xl p-8 hover:bg-neutral-750 transition-all duration-300 transform hover:scale-105">
            <div class="aspect-square bg-gradient-to-br from-neutral-700 to-neutral-800 rounded-xl mb-6 flex items-center justify-center">
              <div class="w-32 h-32 bg-gradient-to-br from-accent-400 to-accent-600 rounded-full flex items-center justify-center">
                <span class="text-white font-bold text-2xl">PB</span>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">Protein Elite</h3>
            <p class="text-neutral-400 mb-4">Enhanced with plant-based protein powder. 35g protein per serving.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-accent-400">$29.99</span>
              <button class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-2 rounded-full transition-colors">
                Add to Cart
              </button>
            </div>
          </div>
          
          <!-- Product 3 -->
          <div class="group bg-neutral-800 rounded-2xl p-8 hover:bg-neutral-750 transition-all duration-300 transform hover:scale-105">
            <div class="aspect-square bg-gradient-to-br from-neutral-700 to-neutral-800 rounded-xl mb-6 flex items-center justify-center">
              <div class="w-32 h-32 bg-gradient-to-br from-amber-400 to-orange-500 rounded-full flex items-center justify-center">
                <span class="text-white font-bold text-2xl">PB</span>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">Recovery Blend</h3>
            <p class="text-neutral-400 mb-4">Infused with MCT oil and adaptogenic mushrooms for optimal recovery.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-accent-400">$34.99</span>
              <button class="bg-accent-500 hover:bg-accent-600 text-white px-6 py-2 rounded-full transition-colors">
                Add to Cart
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-24 bg-neutral-950">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
            The PowerButter Difference
          </h2>
          <p class="text-xl text-neutral-400 max-w-3xl mx-auto">
            We don't just make peanut butter. We craft performance nutrition for elite athletes.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="text-center space-y-4">
            <div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-full flex items-center justify-center mx-auto">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white">Premium Ingredients</h3>
            <p class="text-neutral-400">Only the finest, ethically-sourced peanuts make it into our jars.</p>
          </div>
          
          <div class="text-center space-y-4">
            <div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-full flex items-center justify-center mx-auto">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white">Performance Focused</h3>
            <p class="text-neutral-400">Formulated specifically for athletes and fitness enthusiasts.</p>
          </div>
          
          <div class="text-center space-y-4">
            <div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-full flex items-center justify-center mx-auto">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white">Made with Love</h3>
            <p class="text-neutral-400">Small batches crafted with passion in our state-of-the-art facility.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 bg-gradient-to-r from-accent-900 via-accent-800 to-accent-900">
      <div class="max-w-4xl mx-auto text-center px-6 lg:px-8">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-6">
          Ready to Elevate Your Performance?
        </h2>
        <p class="text-xl text-accent-100 mb-8">
          Join thousands of elite athletes who trust PowerButter to fuel their success.
        </p>
        <a 
          href="/products" 
          class="inline-block bg-white hover:bg-neutral-100 text-accent-800 px-12 py-4 rounded-full font-bold text-xl transition-all duration-300 transform hover:scale-105 shadow-2xl"
        >
          Shop Now
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>