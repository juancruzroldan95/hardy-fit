---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import HeroSection from '../components/HeroSection.astro';
import ProductsSection from '../components/ProductsSection.astro';
import WhyChooseUsSection from '../components/WhyChooseUsSection.astro';
import CTASection from '../components/CTASection.astro';
---

<Layout
  title="HARDY - Pasta de maní ultra premium para atletas"
  description="Pasta de maní ultra premium para atletas exigentes. Ingredientes puros, calidad sin concesiones y rendimiento máximo."
>
  <main>
    <!-- Hero Section -->
    <SectionContainer id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden" noContainer={true}>
      <HeroSection />
    </SectionContainer>

    <!-- Featured Products -->
    <SectionContainer id="products" class="py-24 bg-white">
      <ProductsSection />
    </SectionContainer>

    <!-- Why Choose Us -->
    <SectionContainer id="why-choose-us" class="py-24 bg-cream">
      <WhyChooseUsSection />
    </SectionContainer>

    <!-- CTA Section -->
    <SectionContainer id="cta" class="py-24 bg-gradient-to-r from-accent-900 via-accent-800 to-accent-900">
      <CTASection />
    </SectionContainer>
  </main>
  
</Layout>