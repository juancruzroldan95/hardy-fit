---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import AboutHeroSection from '../components/AboutHeroSection.astro';
import StorySection from '../components/StorySection.astro';
import ValuesSection from '../components/ValuesSection.astro';
import TeamSection from '../components/TeamSection.astro';
import StatsSection from '../components/StatsSection.astro';
import AboutCTASection from '../components/AboutCTASection.astro';
---

<Layout
  title="Acerca de HARDY - Nuestra Historia"
  description="Conocé la misión de HARDY de crear pasta de maní ultra premium para atletas de élite y fanáticos del fitness."
>
  <main class="pt-16">
    <!-- Hero Section -->
    <SectionContainer id="hero" class="relative overflow-hidden" noContainer={true}>
      <AboutHeroSection />
    </SectionContainer>

    <!-- Story Section -->
    <SectionContainer id="story" class="py-24 bg-white">
      <StorySection />
    </SectionContainer>

    <!-- Values Section -->
    <SectionContainer id="values" class="py-24 bg-cream">
      <ValuesSection />
    </SectionContainer>

    <!-- Team Section -->
    <SectionContainer id="team" class="py-24 bg-white">
      <TeamSection />
    </SectionContainer>

    <!-- Stats Section -->
    <SectionContainer id="stats" class="py-24 bg-gradient-to-r from-accent-900 via-accent-800 to-accent-900">
      <StatsSection />
    </SectionContainer>

    <!-- CTA Section -->
    <SectionContainer id="cta" class="py-24 bg-cream">
      <AboutCTASection />
    </SectionContainer>
  </main>
  
</Layout>