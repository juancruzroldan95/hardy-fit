---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import AboutHeroSection from "../components/AboutHeroSection.astro";
import StorySection from "../components/StorySection.astro";
import ValuesSection from "../components/ValuesSection.astro";
import TeamSection from "../components/TeamSection.astro";
import StatsSection from "../components/StatsSection.astro";
import AboutCTASection from "../components/AboutCTASection.astro";
---

<Layout title="HARDY - Nuestra Esencia">
  <main class="pt-16">
    <!-- Hero Section -->
    <SectionContainer
      id="hero"
      class="relative overflow-hidden"
      noContainer={true}
    >
      <AboutHeroSection
        titleColor="text-primary"
        titleSize="text-5xl md:text-6xl"
        descriptionColor="text-black"
      />
    </SectionContainer>

    <!-- Story Section -->
    <SectionContainer
      id="story"
      class="py-24 bg-gradient-to-r from-primary-600 via-primary-500 to-primary-600"
    >
      <StorySection titleColor="text-secondary" descriptionColor="text-white" />
    </SectionContainer>

    <!-- Values Section -->
    <SectionContainer id="values" class="py-24 bg-neutral-50">
      <ValuesSection
        titleColor="text-primary"
        bgColor="bg-white"
        iconColor="text-primary"
        cardTitleColor="text-primary"
        cardDescriptionColor="text-neutral-700"
      />
    </SectionContainer>

    <!-- Team Section -->
    <SectionContainer id="team" class="py-24 bg-white">
      <TeamSection />
    </SectionContainer>

    <!-- Stats Section -->
    <SectionContainer
      id="stats"
      class="py-24 bg-gradient-to-r from-accent-500 via-accent-600 to-accent-500"
    >
      <StatsSection />
    </SectionContainer>

    <!-- CTA Section -->
    <SectionContainer id="cta" class="py-24 bg-cream">
      <AboutCTASection />
    </SectionContainer>
  </main>
</Layout>
