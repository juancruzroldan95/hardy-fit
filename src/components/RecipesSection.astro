---
import RecipeCard from "./RecipeCard.astro";
import { RECIPES } from "../consts/recipes";
---

<div class="text-center mb-16">
  <h2
    class="text-4xl md:text-5xl font-header uppercase font-extrabold text-accent mb-4"
  >
    Nuestras Recetas
  </h2>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
  {
    RECIPES.map((recipe) => (
      <RecipeCard recipe={recipe} />
    ))
  }
</div>
