---
export interface CardItem {
  icon: any; // Astro component
  title: string;
  description: string;
}

export interface Props {
  item: CardItem;
  className?: string;
  bgColor?: string;
  borderColor?: string;
  iconColor?: string;
  titleColor?: string;
  descriptionColor?: string;
}

const {
  item,
  className = "",
  bgColor = "bg-transparent",
  borderColor = "ring-neutral-200 hover:ring-neutral-400",
  iconColor = "text-black",
  titleColor = "text-black",
  descriptionColor = "text-black",
} = Astro.props;
---

<div
  class={`card ${bgColor} rounded-xl p-8 text-center group ring-1 ${borderColor} transition-all duration-300 ${className}`}
>
  <div class="w-16 h-16 flex items-center justify-center mx-auto mb-6">
    <item.icon
      class={`size-16 ${iconColor} transition-all duration-300 group-hover:scale-110`}
    />
  </div>
  <h3 class={`text-xl font-header font-extrabold uppercase ${titleColor} mb-4`}>
    {item.title}
  </h3>
  <p class={descriptionColor}>{item.description}</p>
</div>
