---
import WhatsApp from "../icons/WhatsApp.astro";
import Mail from "../icons/Mail.astro";
import Phone from "../icons/Phone.astro";

const whatsappUrl =
  "https://api.whatsapp.com/send?phone=5491135736956&text=Hola%2C%20quiero%20consultar%20sobre%20los%20packs%20mayoristas";
const emailUrl = "mailto:ventas@hardy.ar";
const phone = "11 3573 6956";
---

<div class="text-center space-y-8">
  <div class="space-y-4">
    <h2
      class="text-4xl md:text-5xl font-header font-extrabold text-primary uppercase"
    >
      Â¿Listo para empezar?
    </h2>
    <p class="text-xl text-neutral-700 max-w-3xl mx-auto leading-relaxed">
      Contactanos para consultar disponibilidad, armar un pack personalizado o
      resolver cualquier duda sobre el programa mayorista.
    </p>
  </div>

  <!-- Contact Buttons -->
  <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
    <!-- WhatsApp Button -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="group bg-[#25D366] hover:bg-[#20BA5A] text-white px-8 py-4 rounded-full font-bold uppercase text-lg transition-all duration-300 hover:scale-105 hover:shadow-xl active:scale-95 inline-flex items-center gap-3 min-w-[280px] justify-center"
    >
      <WhatsApp class="w-6 h-6" />
      <span>WhatsApp</span>
    </a>

    <!-- Email Button -->
    <a
      href={emailUrl}
      class="bg-primary hover:bg-primary/90 text-white px-8 py-4 rounded-full font-bold uppercase text-lg transition-all duration-300 hover:scale-105 hover:shadow-xl active:scale-95 inline-flex items-center gap-3 min-w-[280px] justify-center"
    >
      <Mail class="w-6 h-6" />
      <span>Email</span>
    </a>
  </div>

  <!-- Contact Info -->
  <div class="pt-6 space-y-2">
    <div class="flex items-center justify-center gap-2 text-neutral-600">
      <Phone class="w-5 h-5" />
      <span class="font-semibold">{phone}</span>
    </div>
    <div class="flex items-center justify-center gap-2 text-neutral-600">
      <Mail class="w-5 h-5" />
      <span class="font-semibold">ventas@hardy.ar</span>
    </div>
  </div>
</div>
