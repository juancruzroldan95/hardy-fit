---
import type { Pack } from "../consts/packs";
import CircleCheckFilled from "../icons/CircleCheckFilled.astro";

export interface Props {
  pack: Pack;
}

const { pack } = Astro.props;

const whatsappMessage = `Hola, quiero consultar sobre el ${pack.title}`;
const whatsappUrl = `https://api.whatsapp.com/send?phone=5491135736956&text=${encodeURIComponent(whatsappMessage)}`;
---

<div
  class="card bg-white rounded-2xl shadow-lg ring-1 ring-neutral-200 overflow-hidden transition-all duration-300 hover:shadow-2xl hover:ring-primary/50 hover:-translate-y-1"
>
  <!-- Header -->
  <div
    class="bg-gradient-to-br from-primary to-primary/80 text-white p-6 text-center"
  >
    <h3 class="text-2xl font-header font-bold uppercase mb-2">
      {pack.name}
    </h3>
    <p class="text-secondary font-semibold text-lg">
      {pack.minUnits} unidades / {pack.totalBoxes} cajas
    </p>
  </div>

  <!-- Content -->
  <div class="p-6 space-y-6">
    <!-- Description -->
    <div>
      <p class="text-neutral-700 leading-relaxed">
        {pack.fullDescription}
      </p>
    </div>

    <!-- Composition -->
    <div>
      <h4 class="text-lg font-bold text-primary mb-3 uppercase">
        Composición del pack
      </h4>
      <div class="space-y-2">
        {
          pack.composition.map((item) => (
            <div class="flex justify-between items-center py-2 border-b border-neutral-200 last:border-0">
              <div class="flex-1">
                <p class="font-semibold text-neutral-800">{item.productName}</p>
                <p class="text-sm text-neutral-600">
                  {item.boxes} {item.boxes === 1 ? "caja" : "cajas"} ×{" "}
                  {item.unitsPerBox} u
                </p>
              </div>
              <div class="text-right">
                <p class="font-bold text-primary">{item.totalUnits} unidades</p>
                {pack.showPrices && item.unitPrice && (
                  <p class="text-sm text-neutral-600">
                    ${item.unitPrice.toLocaleString("es-AR")} c/u
                  </p>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Benefits -->
    {
      pack.benefits && pack.benefits.length > 0 && (
        <div>
          <h4 class="text-lg font-bold text-primary mb-3 uppercase">
            Beneficios
          </h4>
          <ul class="space-y-2">
            {pack.benefits.map((benefit) => (
              <li class="flex items-start gap-2">
                <CircleCheckFilled class="w-5 h-5 text-secondary flex-shrink-0 mt-0.5" />
                <span class="text-neutral-700">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      )
    }

    <!-- Target Audience -->
    {
      pack.targetAudience && pack.targetAudience.length > 0 && (
        <div>
          <h4 class="text-lg font-bold text-primary mb-3 uppercase">
            ¿Para quién es este pack?
          </h4>
          <div class="flex flex-wrap gap-2">
            {pack.targetAudience.map((audience) => (
              <span class="inline-block bg-neutral-100 text-neutral-700 px-3 py-1 rounded-full text-sm font-medium">
                {audience}
              </span>
            ))}
          </div>
        </div>
      )
    }

    <!-- CTA Button -->
    <div class="pt-4">
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="block w-full bg-accent hover:bg-accent/90 text-white text-center px-6 py-4 rounded-full font-bold uppercase text-lg transition-all duration-300 hover:scale-105 hover:shadow-lg active:scale-95"
      >
        Consultar Pack
      </a>
    </div>
  </div>
</div>
