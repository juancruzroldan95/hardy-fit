---
import ProductItem from "./ProductItem.astro";
import ProductCarousel from "./ProductCarousel.astro";
import { PRODUCTS } from "../consts/products";

const activeProducts = PRODUCTS.filter((product) => product.isActive);
---

<div class="scrolling-section opacity-0">
  <div class="text-center mb-16">
    <h2
      class="text-4xl md:text-5xl font-header font-extrabold text-primary uppercase mb-4"
    >
      Nuestros Productos
    </h2>
    <p class="text-xl text-black max-w-3xl mx-auto">
      Energía natural en cada variedad. Elegí el que mejor se adapte a tu
      entrenamiento.
    </p>
  </div>

  <!-- Mobile Carousel -->
  <ProductCarousel />

  <!-- Desktop Grid -->
  <div class="hidden md:grid card-grid grid-cols-1 md:grid-cols-3 gap-8">
    {
      activeProducts.map((product) => (
        <ProductItem product={product} variant="simple" />
      ))
    }
  </div>
</div>
